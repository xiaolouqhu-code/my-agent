    "workflows": {
      "investment_analysis_workflow": {
        "name": "投资分析工作流",
        "description": "完整的投资分析流程",
        "agents": ["investment_advisor", "business_analyst"],
        "steps": [
          {
            "id": "market_research",
            "agent": "investment_advisor",
            "action": "conduct_market_research",
            "dependencies": []
          },
          {
            "id": "financial_analysis",
            "agent": "business_analyst",
            "action": "analyze_financial_data",
            "dependencies": ["market_research"]
          },
          {
            "id": "risk_assessment",
            "agent": "investment_advisor",
            "action": "assess_investment_risk",
            "dependencies": ["financial_analysis"]
          },
          {
            "id": "recommendation",
            "agent": "investment_advisor",
            "action": "generate_investment_recommendation",
            "dependencies": ["risk_assessment"]
          }
        ]
      },
      "project_execution_workflow": {
        "name": "项目执行工作流",
        "description": "标准项目执行流程",
        "agents": ["project_manager", "technical_integrator"],
        "steps": [
          {
            "id": "project_planning",
            "agent": "project_manager",
            "action": "create_project_plan",
            "dependencies": []
          },
          {
            "id": "resource_allocation",
            "agent": "project_manager",
            "action": "allocate_resources",
            "dependencies": ["project_planning"]
          },
          {
            "id": "technical_setup",
            "agent": "technical_integrator",
            "action": "setup_technical_infrastructure",
            "dependencies": ["resource_allocation"]
          },
          {
            "id": "execution_monitoring",
            "agent": "project_manager",
            "action": "monitor_project_execution",
            "dependencies": ["technical_setup"]
          }
        ]
      }
    },
    "integrationSettings": {
      "mcpConfiguration": {
        "serverTimeout": 30000,
        "maxRetries": 3,
        "logLevel": "info",
        "enableMetrics": true
      },
      "dataAccess": {
        "cacheTimeout": 3600,
        "maxCacheSize": "100MB",
        "compressionEnabled": true
      },
      "security": {
        "encryptionEnabled": true,
        "accessControl": "role-based",
        "auditLogging": true
      }
    },
    "monitoring": {
      "metrics": [
        "response_time",
        "success_rate",
        "error_rate",
        "capability_usage",
        "agent_performance"
      ],
      "alerts": [
        {
          "name": "high_error_rate",
          "condition": "error_rate > 5%",
          "action": "notify_admin"
        },
        {
          "name": "slow_response",
          "condition": "response_time > 10s",
          "action": "scale_resources"
        }
      ],
      "dashboards": [
        "agent_performance",
        "capability_utilization",
        "system_health"
      ]
    }
